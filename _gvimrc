"-------------------------------------------------------------------------------
" .gvimrc
"-------------------------------------------------------------------------------
"
"-------------------------------------------------------------------------------
" Font
"-------------------------------------------------------------------------------
if has("gui_running")
  if has("gui_gtk2")
    set guifont=Inconsolata\ 9
  elseif has("gui_win32")
    set guifont=Consolas:h9
  endif
endif

"-------------------------------------------------------------------------------
" Colour scheme
"-------------------------------------------------------------------------------
colorscheme desert

"-------------------------------------------------------------------------------
" Remove scroll-bars and buttons
"-------------------------------------------------------------------------------
set guioptions+=LlRrbT
set guioptions-=LlRrbT

